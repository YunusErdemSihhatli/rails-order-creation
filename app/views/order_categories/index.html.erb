<p id="notice"><%= notice %></p>

<h1>Order Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_categories.each do |order_category| %>
      <tr>
        <td><%= order_category.name %></td>
        <td><%= link_to 'Show', order_category %></td>
        <td><%= link_to 'Edit', edit_order_category_path(order_category) %></td>
        <td><%= link_to 'Destroy', order_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

